# Database Configuration
DB_ENGINE=sqlite
# For MySQL, uncomment and configure:
# DB_ENGINE=mysql
# DB_NAME=racksum
# DB_USER=racksum_user
# DB_PASSWORD=your_secure_password
# DB_HOST=localhost
# DB_PORT=3306

# WebAuthn/Passkey Configuration
WEBAUTHN_RP_ID=localhost
WEBAUTHN_RP_NAME=RackSum
WEBAUTHN_ORIGIN=http://localhost:3000

# Authentication Settings
# Set to 'false' to disable authentication requirement
REQUIRE_AUTH=false

# MCP Server Configuration
# Set to 'true' to enable the MCP server for Claude integration
MCP_ENABLED=false
MCP_PORT=3001

# Sentry Configuration
# Get your DSN from https://sentry.io/settings/your-org/projects/your-project/keys/
# Leave empty to disable Sentry
SENTRY_DSN=

# Environment name (e.g., development, staging, production)
SENTRY_ENVIRONMENT=development

# Performance monitoring - traces sample rate (0.0 to 1.0)
# 0.0 = no performance data, 1.0 = 100% of transactions
# Recommended: 0.1 for production (10% of transactions)
SENTRY_TRACES_SAMPLE_RATE=0.0

# Profiling sample rate (0.0 to 1.0)
# Requires SENTRY_TRACES_SAMPLE_RATE to be set
# Recommended: 0.1 for production (10% of profiles)
SENTRY_PROFILES_SAMPLE_RATE=0.0

# Logging integration
# Enable Sentry to capture log messages
SENTRY_ENABLE_LOGGING=true

# Minimum logging level to capture (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# This sets the breadcrumb level
SENTRY_LOGGING_LEVEL=ERROR

# Minimum logging level to create Sentry events (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# This sets when to actually send events to Sentry
SENTRY_LOGGING_EVENT_LEVEL=ERROR
